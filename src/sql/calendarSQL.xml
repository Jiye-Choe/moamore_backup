<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- namespace -->
  <mapper namespace="calendar">
  	
  <select id="selectBudgetDatebyId" parameterType="string" resultType="budgetDTO">
  	select * from budget where id=#{value}
  </select>
  	
  	<select id="selectBudgetAmountBydate" parameterType="map" resultType="int">
  		<foreach collection="budgetAlldate" item="item" separator="UNION ALL">
  		select sum(amount) from budget where id=#{id} and TO_CHAR("date",'YYYY-MM-DD')= #{item}
  		</foreach>
  	</select>
	
	
	 <select id="selectNoBudgetDatebyId" parameterType="string" resultType="nobudgetDTO">
  		select * from nobudget where id=#{value}
  	</select>
	
	
	
	<select id="selectNoBudgetIncomeAmountBydate" parameterType="map" resultType="int">
  		<foreach collection="budgetAlldate" item="item" separator="UNION ALL">
  		select sum(amount) from budget where id=#{id} and type='income' and TO_CHAR("date",'YYYY-MM-DD')= #{item}
  		</foreach>
  	</select>
	
	
  </mapper>
 