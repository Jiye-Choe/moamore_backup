<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- namespace -->
  <mapper namespace="budgetDetail">
  	<!-- 예산 세부정보 삽입 -->
  	<insert id="insertTotalBudgetDetail" parameterType="budgetDetailDTO">
  		insert into total_budget_detail values(#{category_no}, #{budget_no}, #{category_budget})
  	</insert>
  	
  	<!-- 총예산 고유번호에 해당하는 세부정보 가져오기 -->
  	<select id="selectAllbyBudgetNum" parameterType="int" resultType="budgetDetailDTO">
  		select * from total_budget_detail where budget_no=#{value} order by category_no asc
  	</select>
  	
	<!-- 총예산 고유번호에 해당하는 카테고리 리스트 가져오기 -->
	<select id="selectBudgetCategoryNums" parameterType='int' resultType="int">
		select * from total_budget_detail where budget_no=#{value}
	</select>
	
	<!-- 총예산 고유번호에 해당하는 세부정보 수정 -->
	<update id="updateTotalBudgetDetail" parameterType="budgetDetailDTO">
		update total_budget_detail set category_budget=#{category_budget} where category_no=#{category_no} and budget_no=#{budget_no}
	</update>
  </mapper>
 