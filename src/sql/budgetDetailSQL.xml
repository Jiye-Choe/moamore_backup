<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- namespace -->
  <mapper namespace="budgetDetail">
  	<!-- 예산 세부정보 삽입 -->
  	<insert id="insertBudgetDetail" parameterType="budgetDetailDTO">
  		insert into budget_detail values(#{category_no}, #{budget_no}, #{category_budget})
  	</insert>
  	
  	<!-- 총예산 고유번호에 해당하는 세부정보 가져오기 -->
  	<select id="selectAllbyBudgetNum" parameterType="int" resultType="budgetDetailDTO">
  		select * from budget_detail where budget_no=#{value}
  	</select>
  </mapper>
 