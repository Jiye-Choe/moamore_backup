<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  


 <mapper namespace="member"> 
 	<insert id="insertMember" >
 		insert into member values(#{id},#{pw},#{nickname},#{profile_img},sysdate)
 	</insert>
 

 	<select id="idPwCheck" resultType="int" parameterType="hashmap" >
 		select count(*) from member where id=#{id} and pw=#{pw}
 	</select>

	<select id="selectOne" resultType="memberDTO" parameterType="string">
		select * from member where id=#{value}
	</select>

	<update id="updateMember" parameterType="memberDTO" >
		update member set pw=#{pw}, nickname=#{nickname}, profile_img=#{profile_img} where id=#{id}
	</update>
	
 </mapper>